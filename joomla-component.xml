<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.0" method="upgrade">
 
	<name>Benchmark Email Lite</name>

	<!-- The following elements are optional and free of formatting constraints -->
	<author>beAutomated</author>
	<authorUrl>http://beautomated.com</authorUrl>
	<license>GPLv3</license>

	<!--  The version string is recorded in the components table -->
	<version>1.0a</version>

	<!-- The description is optional and defaults to the name -->
	<description>Benchmark Email Lite lets you build an email list from your Joomla! site, and easily send your subscribers email versions of your articles.</description>

	<!-- Runs on update; New since J2.5 -->
	<update>
		<schemas>
			<!-- <schemapath type="mysql">sql/updates/mysql</schemapath> -->
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<!-- <files folder="site"> -->
		<!-- <filename>index.html</filename> -->
	<!-- </files> -->

	<administration>

		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_benchmarkemaillite'>Benchmark Email Lite</menu>

		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<filename>index.html</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>views</folder>
		</files>

		<files folder="frontend">
			<filename>index.html</filename>
			<folder>controllers</folder>
			<folder>views</folder>
		</files>

		<files folder="models">
			<filename>index.html</filename>
			<filename>class.api.php</filename>
			<filename>class.posts.php</filename>
			<filename>class.reports.php</filename>
			<filename>class.settings.php</filename>
			<filename>class.widget.php</filename>
		</files>

	</administration>

</extension>